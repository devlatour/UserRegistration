       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>

    <definition name="mainTemplate" template="/WEB-INF/tiles/templates/main.jsp">
        <put-attribute name="title" value="User Registration" type="string" />
        <put-attribute name="header" value="/WEB-INF/tiles/templates/header.jsp" />
        <put-attribute name="footer" value="/WEB-INF/tiles/templates/footer.jsp" />
        <put-attribute name="body" value="/WEB-INF/tiles/templates/blank.jsp" />
    </definition>
 
    <definition name="index" extends="mainTemplate">
        <put-attribute name="body" value="/webapp/index.jsp" />
    </definition>

    <definition name="success" extends="mainTemplate">
        <put-attribute name="body" value="/WEB-INF/jsp/success.jsp" />
    </definition>
    
    <definition name="failure" extends="mainTemplate">
    	<put-attribute name="body" value="/WEB-INF/jsp/failure.jsp"/>
    </definition>
    
    <definition name="login" extends="mainTemplate">
    	<put-attribute name="body" value="/WEB-INF/jsp/login.jsp"/>
    </definition>
    
    <definition name="signup" extends="mainTemplate">
 		<put-attribute name="body" value="/WEB-INF/jsp/signup.jsp"/>
 	</definition>
    
</tiles-definitions>
                